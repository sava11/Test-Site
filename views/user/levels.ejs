<section class="section">
    <div class="container">
        <h1 class="title">Пройденные уровни пользователя: <%= login %>
        </h1>

        <% if (levels.length> 0) { %>
            <table class="table is-striped is-fullwidth">
                <thead>
                    <tr>
                        <th>№</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% levels.forEach((level, index)=> { %>
                        <tr>
                            <!-- <td>
                                <%= index + 1 %>
                            </td> -->
                            <td>
                                <%= level %>
                            </td>
                            <td>
                                <a href="/attempts/<%= login %>/<%= level %>">перейти</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>Пользователь не проходил ни одного уровня.</p>
        <% } %>
    </div>
</section>